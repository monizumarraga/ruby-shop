            <%= form.label :quantity %>
            <%= form.number_field :quantity %>
          </div>
        
          <div class="field">
            <%= form.label :unitdiscount %>
            <%= form.select(:unitdiscount, options_for_select(['â‚¬', '%'])) %>
          </div>
          
